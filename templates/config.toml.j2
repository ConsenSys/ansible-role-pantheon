# data
data-path="{{pantheon_data_dir}}"
logging="{{pantheon_log_level}}"

network="{{pantheon_network}}"
sync-mode="{{pantheon_sync_mode}}"
host-whitelist=[{{pantheon_host_whitelist|map('to_json')|join(',')}}]

# rpc
{% if pantheon_rpc_http_enabled|bool == True %}
rpc-http-enabled={{pantheon_rpc_http_enabled}}
rpc-http-host="{{pantheon_rpc_http_host}}"
rpc-http-api=[{{pantheon_rpc_http_api|map('to_json')|join(',')}}]
{% endif %}

# ws
{% if pantheon_rpc_ws_enabled|bool == True %}
rpc-ws-enabled={{pantheon_rpc_ws_enabled}}
rpc-ws-host="{{pantheon_rpc_ws_host}}"
rpc-ws-port={{pantheon_rpc_ws_port}}
{% endif %}

# p2p
{% if pantheon_host_ip != "" %}
p2p-host="{{pantheon_host_ip}}"
{% endif %}
p2p-port={{pantheon_p2p_port}}

# metrics
metrics-enabled=true
metrics-host="{{pantheon_metrics_host}}"
metrics-port={{pantheon_metrics_port}}

{% if pantheon_bootnodes|length > 0 %}
# bootnodes
bootnodes={{pantheon_bootnodes}}
{% endif %}